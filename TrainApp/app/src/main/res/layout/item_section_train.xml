<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_rounded"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tv_section_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TGV INOUI"
        android:textStyle="bold"
        android:textColor="@color/main_blue"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_section_dep_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="07:53"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_section_dep_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gare de départ"/>
    </LinearLayout>

    <View android:layout_width="2dp" android:layout_height="10dp"
        android:background="#CCC" android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_section_arr_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="10:02"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_section_arr_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gare d'arrivée"/>
    </LinearLayout>
</LinearLayout>