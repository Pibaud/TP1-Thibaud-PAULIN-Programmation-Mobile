<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/tv_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_blue"
                    android:text="14:54" />
                <TextView
                    android:id="@+id/tv_departure_station"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:text="Montpellier St-Roch" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_white_rounded"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="1h55"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/tv_arrival_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_blue"
                    android:text="16:49" />
                <TextView
                    android:id="@+id/tv_arrival_station"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:text="Lyon Part Dieu" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/accent_orange"
            android:alpha="0.3"
            android:layout_marginVertical="16dp" />

        <TextView
            android:id="@+id/tv_train_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TGV INOUI nÂ°9864"
            android:textStyle="bold"
            android:textColor="@color/main_blue"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>